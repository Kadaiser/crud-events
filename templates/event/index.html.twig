{% extends 'base.html.twig' %}

{% block title %}Hello EventController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Events</h1>

    {% for message in app.flashes('error') %}
        <div class="flash-error">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('success') %}
        <div class="flash-error">
            {{ message }}
        </div>
    {% endfor %}

    {% if is_granted('ROLE_ADMIN') %}
      <a href="{{ path('admin_event_create') }}" class="btn btn-primary">Create new event</a>
    {% endif %}

    <form method="get" action="{{ path('app_event') }}">
        <input type="text" name="name" placeholder="Filter by name">
        <button type="submit">Filter</button>
    </form>

    <ul>
      {% for event in events %}
          <li>
            <div>
              <a href="{{ path('app_event_show', {'id' : event.id}) }}">{{ event.name }}</a>
            </div>
            <div>
              {{ event.description }}
            </div>
            <div>
              {{ event.slots }} Plazas
            </div>
            <div>
              {{ event.endDate|date('d-m-Y') }}
            </div>
          {% if app.user.isSubscribedToEvent(event) %}
              <div>
                  <a href="{{ path('user_event_unsubscribe', {'event' : event.id, 'user' : app.user.id}) }}">Unsubscribe</a>
              </div>
          {% else %}
              <div>
                  <a href="{{ path('user_event_subscribe', {'event' : event.id, 'user' : app.user.id}) }}">Subscribe</a>
              </div>
          {% endif %}



          {% if is_granted('ROLE_ADMIN') %}
              <div>
                <a href="{{ path('admin_event_edit', {'id' : event.id}) }}">Edit</a>
              </div>
              <div>
                <a href="{{ path('admin_event_delete', {'id' : event.id}) }}">Delete</a>
              </div>
          {% endif %}

        </li>
      {% else %}
          <li>No events found.</li>
      {% endfor %}
    </ul>
</div>
{% endblock %}
